<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Capricon" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
        <item name="postSplashScreenTheme">@style/Theme.Capricon</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor" >@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="password_criteria_check_box_style" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:drawableLeft">@drawable/custom_check_box_bg</item>
        <item name="android:button">@null</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.Capricon.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Capricon.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Capricon.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>